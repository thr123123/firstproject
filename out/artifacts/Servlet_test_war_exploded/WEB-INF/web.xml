<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0"
         metadata-complete="false">
    <display-name>邮件管理系统</display-name>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <session-config>
        <session-timeout>15</session-timeout>
    </session-config>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>servlet.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>servlet.Register</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>send</servlet-name>
        <servlet-class>servlet.Sendmail</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>send</servlet-name>
        <url-pattern>/send</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>addAddr</servlet-name>
        <servlet-class>servlet.addAddr</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addAddr</servlet-name>
        <url-pattern>/addAddr</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>delAddr</servlet-name>
        <servlet-class>servlet.delAddr</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>delAddr</servlet-name>
        <url-pattern>/delAddr</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>addUser</servlet-name>
        <servlet-class>servlet.addUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addUser</servlet-name>
        <url-pattern>/addUser</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>delUser</servlet-name>
        <servlet-class>servlet.delUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>delUser</servlet-name>
        <url-pattern>/delUser</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>save</servlet-name>
        <servlet-class>servlet.savedraft</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>save</servlet-name>
        <url-pattern>/save</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>read</servlet-name>
        <servlet-class>servlet.readmail</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>read</servlet-name>
        <url-pattern>/read</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>sdraft</servlet-name>
        <servlet-class>servlet.saved</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>sdraft</servlet-name>
        <url-pattern>/sdraft</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>readd</servlet-name>
        <servlet-class>servlet.readdraft</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>readd</servlet-name>
        <url-pattern>/readd</url-pattern>
    </servlet-mapping>
</web-app>